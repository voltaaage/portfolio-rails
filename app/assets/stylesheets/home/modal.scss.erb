#main {
  align-items: center;
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: center;
  width: 100vw;

  .modal {
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0,0.4);
    display: flex;
    overflow: auto;
    z-index: 1;
    margin: 4% 5% 11% 5%;
    padding: 2em;
    width: 80%;
  }

  .modal-content {
    align-items: center;
    border-color: #888;
    border-style: solid;
    border-width: 1px;
    display: flex;
    flex-direction: column;
    margin: 5%;
    padding: 20%;
    width: 80%;

  }

  #aboutContents {
    display: none;
  }

  #resumeContents {
    display: none;
  }


  .close {

    &:hover {
      color: black;
      text-decoration: none;
    }
  }
}
