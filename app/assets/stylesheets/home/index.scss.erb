@import 'home/modal';

.home {

  ul {
    list-style-type: none;
    margin-bottom: 0;
    margin-top: 0.5em;
    padding: 0;
  }

  .avatar {
    border-radius: 50%;
    height: 40px;
    margin-right: 1em;
    min-height: 40px;
    min-width: 40px;
    overflow: hidden;
    position: relative;
    width: 40px;

    img {
      height: auto;
      position: absolute;
      top: -13%;
      width: 100%;
      opacity: 1;
    }
  }

  .background {
    background-image: url(<%= asset_path 'lake.jpg' %>);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    min-width: 100vw;
    min-height: 100vh;
    z-index: 0;
    position: relative;
  }

  .footer {
    background-color: $grey;
    bottom: 0;
    box-sizing: border-box;
    color: $white;
    filter: none;
    opacity: 0.8;
    padding: 1em;
    position: absolute;
    width: 100%;
    z-index: 1;
  }

  .footer__lowerRow {
    display: flex;
    justify-content: space-between;

    @media only screen and (max-width: 768px) { display: block; }
  }

  .name {
    align-items: center;
    display: flex;
    flex-direction: row;
  }

  .socialMedia {

    li {
      display: inline;
      margin-left: 0.5em;
      margin-right: 1em;
      padding: 0;
      white-space: nowrap;

      @media only screen and (max-width: 768px) { display: block; }
    }
  }
}

